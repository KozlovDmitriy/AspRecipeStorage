@model AspRecipeStorage.Models.Recipe

@{
    ViewBag.Title = "Удаление рецепта";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-body">
        <div>
            <h3>Вы уверены что хотите удалить выбранный рецепт?</h3>
            <hr />
            <dl class="dl-horizontal">
                <dt>Название</dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>Описание</dt>
                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>Тип блюда</dt>
                <dd>
                    @Html.DisplayFor(model => model.DishType.Name)
                </dd>

                <dt>Владелец</dt>
                <dd>
                    @Html.DisplayFor(model => model.User.UserName)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Удалить" class="btn btn-sm btn-warning" /> |
                    @Html.AuthorizeActionLink("Назад к списку", "Index")
                </div>
            }
        </div>
    </div>
</div>
