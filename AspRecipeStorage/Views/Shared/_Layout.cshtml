<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <img id="mimg" src="">
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.AuthorizeActionLink("База рецептов", "Index", "Recipes", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.AuthorizeActionLink("Рецепты", "Index", "Recipes")</li>
                    @if (!User.IsLockout())
                    {
                        if (User.IsInRole("User") || User.IsInRole("Admin"))
                        {
                            <li>@Html.AuthorizeActionLink("Мои рецепты", "Index", "Recipes", new { userId = -1 }, null)</li>
                        }
                        if (User.IsInRole("User") || User.IsInRole("Admin"))
                        {
                            <li title="Добавить новый рецепт">@Html.Raw(Html.AuthorizeActionLink("glyph-i", "Create", "Recipes", null, null).ToString().Replace("glyph-i", "<i class=\"glyphicon glyphicon-plus\"></i>"))</li>
                        }
                        if (User.IsInRole("Admin"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="glyphicon glyphicon-cog"></i> Администрирование <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.AuthorizeActionLink("Типы блюд", "Index", "DishTypes")</li>
                                    <li>@Html.AuthorizeActionLink("Инструменты", "Index", "Instruments")</li>
                                    <li><a href="@Url.Action("Index", "MeasureTypes")">Список мер</a></li>
                                    <li><a href="@Url.Action("Index", "MeasureConversions")">Соотношения мер</a></li>
                                </ul>
                            </li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <br />
        @if (ViewBag.WarningMessage != null)
        { 
            <div class="alert alert-warning alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @Html.Raw(ViewBag.WarningMessage)
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - База рецептов</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jqueryunobtrusive")
    <script type="text/javascript">
        $(document).ready(function () {
            $.material.init();
            $('img').on('click', function () {
                var sr = $(this).attr('src');
                $('#mimg').attr('src', sr);
                $('#myModal').modal('show');
            });
        })
    </script>
</body>
</html>
