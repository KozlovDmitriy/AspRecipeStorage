@model IEnumerable<AspRecipeStorage.Models.MeasureConversion>

@{
    ViewBag.Title = "Соотношения мер";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-body">
        <h3>@ViewBag.Title</h3>
        <hr />
        <p>
            @Html.ActionLink("Добавить", "Create")
        </p>
        <table class="table">
            <tr>
                <th>Мера 1</th>
                <th></th>
                <th>Соотношение</th>
                <th></th>
                <th>Мера 2</th>
                <th>Ингредиент</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MeasureFirstType.Name)
                    </td>
                    <td>=</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ratio)
                    </td>
                    <td>&#xd7;</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MeasureSecondType.Name)
                    </td>
                    <td>
                        ( @Html.DisplayFor(modelItem => item.IngredientType.Name) )
                    </td>
                    <td>
                        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                        @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>